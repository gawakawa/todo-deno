{
  "nodeModulesDir": "auto",
  "exclude": ["dist/", ".vite/", "node_modules/"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "tasks": {
    "dev": "deno run --node-modules-dir=auto --allow-net --allow-read --allow-write --allow-env --allow-ffi --allow-sys --allow-run npm:rolldown-vite@7.2.5",
    "build": "deno run --node-modules-dir=auto --allow-net --allow-read --allow-write --allow-env --allow-ffi --allow-sys --allow-run npm:rolldown-vite@7.2.5 build",
    "preview": "deno run --node-modules-dir=auto --allow-net --allow-read --allow-env --allow-ffi --allow-sys --allow-run npm:rolldown-vite@7.2.5 preview",
    "lint": "deno lint",
    "test": "deno test --allow-read --allow-write --allow-env"
  },
  "imports": {
    "react": "npm:react@^19.2.0",
    "react-dom": "npm:react-dom@^19.2.0",
    "react-aria-components": "npm:react-aria-components@^1.13.0",
    "@types/react": "npm:@types/react@^19.2.7",
    "@types/react-dom": "npm:@types/react-dom@^19.2.3",
    "@types/node": "npm:@types/node@^24.10.1",
    "vite": "npm:rolldown-vite@7.2.5",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.1.1",
    "tailwindcss": "npm:tailwindcss@^3.4.18",
    "tailwindcss-react-aria-components": "npm:tailwindcss-react-aria-components@^1.2.0",
    "autoprefixer": "npm:autoprefixer@^10.4.22",
    "postcss": "npm:postcss@^8.5.6",
    "fake-indexeddb": "npm:fake-indexeddb@^6.2.5",
    "fake-indexeddb/auto": "npm:fake-indexeddb@^6.2.5/auto",
    "deno-dom": "jsr:@b-fuze/deno-dom@^0.1.56",
    "@testing-library/react": "npm:@testing-library/react@^16.3.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  },
  "deploy": {
    "org": "gawakawa",
    "app": "todo-deno"
  }
}
